<Container>
  <Name>qbittorrent</Name>
  <Repository>11notes/qbittorrent:5.1.2</Repository>
  <Registry>docker.io</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>

  <Support>https://github.com/11notes/docker-qbittorrent</Support>

  <Project>qbittorrent</Project>
  <Overview>qBittorrent Docker container</Overview>
  <Description>qBittorrent with lockdown options</Description>

  <UI>stable</UI>

  <!-- Environment Variables -->
  <Environment>
    <TZ>
      <Name>TZ</Name>
      <Value>Europe/Zurich</Value>
    </TZ>
  </Environment>

  <!-- Host Ports to Container Ports -->
  <Port>
    <HostPort>3000</HostPort>
    <ContainerPort>8080</ContainerPort>
    <Protocol>tcp</Protocol>
  </Port>
  <Port>
    <HostPort>6881</HostPort>
    <ContainerPort>6881</ContainerPort>
    <Protocol>tcp</Protocol>
  </Port>
  <Port>
    <HostPort>6881</HostPort>
    <ContainerPort>6881</ContainerPort>
    <Protocol>udp</Protocol>
  </Port>

  <!-- Volume Mappings -->
  <Volume>
    <HostPath>/mnt/user/appdata/qbittorrent11n/etc</HostPath>
    <ContainerPath>/qbittorrent/etc</ContainerPath>
    <Mode>rw</Mode>
  </Volume>
  <Volume>
    <HostPath>/mnt/user/appdata/qbittorrent11n/var</HostPath>
    <ContainerPath>/qbittorrent/var</ContainerPath>
    <Mode>rw</Mode>
  </Volume>

  <!-- Additional Docker Options (lockdown) -->
  <ExtraParameters>--read-only --security-opt no-new-privileges=true</ExtraParameters>

  <PostArgs/>
  <WebUI>http://[IP]:3000</WebUI>
</Container>
